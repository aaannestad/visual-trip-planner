<h2>Make a new event!</h2>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_with(model: @event, local: true) do |f| %>
   <!--- this is where the error message partial should go ---> 

       <%=f.label :name%>
       <%=f.text_field :name, class:'form-control'%>
       
       <%=f.label :type%>
       <%=f.select :type, options_for_select(["Event", "Stay", "Travel"]), include_blank: "Select a category", class:'form-control'%>

       <%=f.label :start_date%>
       <%=f.date_field :start_date, class:'form-control'%>

       <%=f.label :end_date%>
       <%=f.date_field :end_date, class:'form-control'%>

     <%=f.submit "Create trip", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>