<h2>Make a new event!</h2>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_with(model: @event, local: true, url: trip_events_path) do |f| %>
   <!--- this is where the error message partial should go ---> 

       <%=f.label :title%>
       <%=f.text_field :title, class:'form-control'%>
       
       <%=f.label :kind%>
       <%=f.select :kind, options_for_select(["Event", "Stay", "Travel"]), include_blank: "Select a category", class:'form-control'%>

       <%=f.label :start_date%>
       <%=f.date_field :start_date, class:'form-control', min: @trip[:start_date], max: @trip[:end_date]%>

       <%=f.label :end_date%>
       <%=f.date_field :end_date, class:'form-control', min: @trip[:start_date], max: @trip[:end_date]%>

     <%=f.submit "Create event", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>