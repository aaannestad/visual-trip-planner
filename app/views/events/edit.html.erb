<h2>Edit your event!</h2>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_with(model: @event, local: true, url: trip_event_path) do |f| %>
   <!--- this is where the error message partial should go ---> 

       <%=f.label :title%>
       <%=f.text_field :title, class:'form-control'%>
       
       <%=f.label :kind%>
       <%=f.select :kind, options_for_select(["Event", "Stay", "Travel"]), include_blank: "Select a category", class:'form-control'%>

       <%=f.label 'Starts at'%>
       <%=f.datetime_field :start_time, class:'form-control', min: @trip[:start_date], max: @trip[:end_date]%>

       <%=f.label 'Ends at'%>
       <%=f.datetime_field :end_time, class:'form-control', min: @trip[:start_date], max: @trip[:end_date]%>

     <%=f.submit "Submit", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>

<%= render 'form_js' %>

<%= link_to "Delete this event", trip_event_path(@trip), method: :delete, data: { confirm: "Are you sure you want to delete this event?" } %>